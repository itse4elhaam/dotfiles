{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "Better Auth": {
      "type": "remote",
      "url": "https://mcp.chonkie.ai/better-auth/better-auth-builder/mcp",
      "enabled": false,
    },
    "augments": {
      "type": "remote",
      "url": "https://mcp.augments.dev/mcp"
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest"
      ],
      "enabled": true
    },
    "next-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "next-devtools-mcp@latest"
      ],
      "enabled": true
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "memory": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "environment": {
        "MEMORY_BANK_ROOT": "~/.memory/memory.jsonl"
      },
      "enabled": true
    },
    "desktop-commander": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@wonderwhy-er/desktop-commander@latest"
      ],
      "enabled": true
    },
    "mindpilot": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@mindpilot/mcp@latest"
      ],
      "enabled": true
    },
    "aid": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@janreges/ai-distiller-mcp"
      ],
      "enabled": true
    },
    "ddg-search": {
      "type": "local",
      "command": [
        "uvx",
        "duckduckgo-mcp-server"
      ],
      "enabled": true
    },
    "mcp-compass": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@liuyoshio/mcp-compass"
      ],
      "enabled": true
    },
    "octocode": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "octocode-mcp@latest"
      ],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": true
    },
  },
  "keybinds": {
    "messages_half_page_down": "alt+j",
    "messages_half_page_up": "alt+k",
    "model_cycle_recent": "alt+l",
    "model_cycle_recent_reverse": "alt+h",
  },
  "instructions": ["docs/ai-guide.md"],
  "plugin": ["opencode-skills"]
}
