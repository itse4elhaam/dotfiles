{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "cursor": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Cursor AI",
      "options": {
        "baseURL": "http://127.0.0.1:9876/v1"
      },
      "models": {
        "auto": {
          "name": "Auto (Cursor picks best)",
          "limit": {
            "context": 200000,
            "output": 65536
          }
        },
        "claude-4.5-opus-high-thinking": {
          "name": "Claude 4.5 Opus High Thinking",
          "limit": {
            "context": 200000,
            "output": 65536
          }
        },
        "claude-4.5-sonnet-thinking": {
          "name": "Claude 4.5 Sonnet Thinking",
          "limit": {
            "context": 200000,
            "output": 65536
          }
        },
        "gpt-5.1-codex": {
          "name": "GPT 5.1 Codex",
          "limit": {
            "context": 128000,
            "output": 65536
          }
        },
        "gpt-5.1-codex-high": {
          "name": "GPT 5.1 Codex High",
          "limit": {
            "context": 128000,
            "output": 65536
          }
        },
        "gemini-3-pro": {
          "name": "Gemini 3 Pro",
          "limit": {
            "context": 1000000,
            "output": 65536
          }
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "Better Auth": {
      "type": "remote",
      "url": "https://mcp.chonkie.ai/better-auth/better-auth-builder/mcp",
      "enabled": false
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest"
      ],
      "enabled": false
    },
    "next-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "next-devtools-mcp@latest"
      ],
      "enabled": false
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": false
    },
    "memory": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "environment": {
        "MEMORY_BANK_ROOT": "~/.memory/memory.jsonl"
      },
      "enabled": true
    },
    "aid": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@janreges/ai-distiller-mcp"
      ],
      "enabled": true
    },
    "ddg-search": {
      "type": "local",
      "command": [
        "uvx",
        "duckduckgo-mcp-server"
      ],
      "enabled": true
    },
    "octocode": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "octocode-mcp@latest"
      ],
      "enabled": true
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": true
    }
  },
  "keybinds": {
    "messages_half_page_down": "alt+j",
    "messages_half_page_up": "alt+k",
    "model_cycle_recent": "alt+l",
    "model_cycle_recent_reverse": "alt+h"
  },
  "instructions": ["{env:HOME}/dotfiles/docs/ai-guide.md"]
}
