{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": false
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": false
    },
    "Better Auth": {
      "type": "remote",
      "url": "https://mcp.chonkie.ai/better-auth/better-auth-builder/mcp",
      "enabled": false
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest"
      ],
      "enabled": false
    },
    "linear": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.linear.app/mcp"
      ],
      "enabled": false
    },
    "next-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "next-devtools-mcp@latest"
      ],
      "enabled": false
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": false
    },
    "memory": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "environment": {
        "MEMORY_BANK_ROOT": "~/.memory/memory.jsonl"
      },
      "enabled": false
    },
    "aid": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@janreges/ai-distiller-mcp"
      ],
      "enabled": false
    },
    "ddg-search": {
      "type": "local",
      "command": [
        "uvx",
        "duckduckgo-mcp-server"
      ],
      "enabled": false
    },
    "octocode": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "octocode-mcp@latest"
      ],
      "enabled": false
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": false
    }
  },
  "keybinds": {
    "messages_half_page_down": "alt+j",
    "messages_half_page_up": "alt+k",
    "model_cycle_recent": "alt+l",
    "model_cycle_recent_reverse": "alt+h",
    "input_newline": "alt+o"
  },
  "instructions": ["{env:HOME}/dotfiles/docs/ai-guide.md"]
}
