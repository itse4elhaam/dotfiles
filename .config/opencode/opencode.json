{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      },
      "enabled": true
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app",
      "enabled": false
    },
    "sequential-thinking": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "enabled": true
    },
    "memory": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "environment": {
        "MEMORY_BANK_ROOT": "/home/elhaam/.memory/memory.jsonl"
      },
      "enabled": true
    },
    "octocode": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "octocode-mcp@latest"
      ],
      "enabled": true
    },
    "ddg-search": {
      "type": "local",
      "command": [
        "uvx",
        "duckduckgo-mcp-server"
      ],
      "enabled": true
    },
    "Better Auth": {
      "type": "remote",
      "url": "https://mcp.chonkie.ai/better-auth/better-auth-builder/mcp",
      "enabled": false
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@playwright/mcp@latest"
      ],
      "enabled": false
    },
    "linear": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "mcp-remote",
        "https://mcp.linear.app/mcp"
      ],
      "enabled": true
    },
    "next-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "next-devtools-mcp@latest"
      ],
      "enabled": false
    },
    "aid": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@janreges/ai-distiller-mcp"
      ],
      "enabled": false
    },
    "chrome-devtools": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "chrome-devtools-mcp@latest"
      ],
      "enabled": false
    }
  },
  "keybinds": {
    "messages_half_page_down": "alt+j",
    "messages_half_page_up": "alt+k",
    "model_cycle_recent": "alt+l",
    "model_cycle_recent_reverse": "alt+h",
    "input_newline": "alt+o"
  },
  "plugin": [
    "oh-my-opencode",
    "@tarquinen/opencode-dcp@latest",
    "opencode-supermemory@latest",
    "opencode-cursor-auth@1.0.16"
  ],
  "instructions": [
    "{env:HOME}/dotfiles/docs/ai-guide.md"
  ],
  "provider": {
    "cursor": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Cursor Agent (local)",
      "options": {
        "baseURL": "http://127.0.0.1:32123/v1"
      },
      "models": {
        "auto": { "name": "Cursor Agent Auto" },
        "gpt-5": { "name": "Cursor Agent GPT-5 (alias â†’ gpt-5.2)" },
        "gpt-5.2": { "name": "Cursor Agent GPT-5.2" },
        "gpt-5.1": { "name": "Cursor Agent GPT-5.1" },
        "gpt-5.1-codex": { "name": "Cursor Agent GPT-5.1 Codex" },
        "sonnet-4.5": { "name": "Cursor Agent Sonnet 4.5" },
        "sonnet-4.5-thinking": { "name": "Cursor Agent Sonnet 4.5 Thinking" }
      }
    }
  }
}
